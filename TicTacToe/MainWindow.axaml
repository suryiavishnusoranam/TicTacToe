<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TicTacToe.MainWindow"
        Title="Welcome to my Tic Tac Toe!"
        Width="250" Height="250">
    <StackPanel>
        <TextBlock x:Name="StatusLabel" Text="Player X's turn" FontSize="20" HorizontalAlignment="Center" Margin="20,20,20,20"/>
        <UniformGrid Rows="3" Columns="3">
            <Button x:Name="Button1" FontSize="24" Click="OnButtonClicked"/>
            <Button x:Name="Button2" FontSize="24" Click="OnButtonClicked"/>
            <Button x:Name="Button3" FontSize="24" Click="OnButtonClicked"/>
            <Button x:Name="Button4" FontSize="24" Click="OnButtonClicked"/>
            <Button x:Name="Button5" FontSize="24" Click="OnButtonClicked"/>
            <Button x:Name="Button6" FontSize="24" Click="OnButtonClicked"/>
            <Button x:Name="Button7" FontSize="24" Click="OnButtonClicked"/>
            <Button x:Name="Button8" FontSize="24" Click="OnButtonClicked"/>
            <Button x:Name="Button9" FontSize="24" Click="OnButtonClicked"/>
        </UniformGrid>
    </StackPanel>
</Window>